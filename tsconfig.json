{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./dist/",
        "lib": ["es2015", "dom"],
        "sourceMap": true,
        "noImplicitAny": true,
        "allowJs": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "declarationDir": "./dist/"
    },
    "include": [
        "src/**/*"
    ]
}
